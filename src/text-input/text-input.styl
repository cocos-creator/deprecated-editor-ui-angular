.fire-ui-text-input {                         
    display-flexbox ()
    flex-direction: row
    flex-wrap: nowrap     
    align-items: baseline
    position: relative

    height: 21px
    min-height: 21px
    min-width: 60px
    border: 1px solid black

    background: #232323
    color: #ddd
    box-shadow: 
        inset 0 0 0 1px rgba(0,0,0,0.1), 
        0px 0 0 1px rgba(255,255,255,0.1)

    transition: box-shadow .3s ease

    &.focused {                         
        box-shadow: 
            inset 0 0 0 1px rgba(0,0,0,0.1), 
            0px 0 0 1px #0c70a6, 
            0px 0 4px 1px rgba(12,112,166,0.8)
    }

    .input {                         
        flex: auto
        display: block
        padding: 3px 4px
        border: 0
        margin: 0
        font-size: 12px
        height: 100%

        text-shadow: 1px 1px 0 #000
        background: transparent
        color: #ddd

        pointer-events: auto
        user-select: auto
        cursor: auto

        &::-webkit-input-placeholder {
            font-style: italic
            color: #666
            text-shadow: none
        }
    }
}

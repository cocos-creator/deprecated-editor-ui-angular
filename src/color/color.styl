.fire-ui-color {
    totalHeight = 21

    flex: 1 0 60px
    position: relative

    height: (totalHeight)px
    min-height: 21px
    max-height: 21px
    min-width: 60px
    border: 1px solid black

    background: #232323
    color: #ddd
    box-shadow: inset 0 0 0 1px rgba(0,0,0,0.1), 0px 0 0 1px rgba(255,255,255,0.1)

    transition: box-shadow .3s ease

    &.focused {                         
        box-shadow: inset 0 0 0 1px rgba(0,0,0,0.1), 0px 0 0 1px #0c70a6, 0px 0 4px 1px rgba(12,112,166,0.8)
    }

    .preview-rgb-bg {
        position: relative
        display: block
        height: (totalHeight - 2 - 3)px
        width: 100%
        background-image: url('transparent-bg.png')

        .preview-rgb {
            height: 100%
            width: 100%
            background-color: red

            cursor: pointer 
        }

        i {
            font-size: 8px
            color: black
            position: absolute
            right: 2px
            bottom: 2px
        }
    }

    .preview-alpha {
        display: block
        height: 3px
        width: 100%
        background: transparent
        background-color: white

        cursor: pointer 
    }
}
